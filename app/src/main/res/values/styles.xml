<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="chat_bubble_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">21sp</item>
        <item name="android:breakStrategy">high_quality</item>
        <item name="android:maxEms">14</item>
    </style>

    <style name="chat_bubble_sent_style" parent="chat_bubble_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_send_chat_bubble</item>
        <item name="android:backgroundTint">@color/pink</item>
    </style>

    <style name="chat_bubble_received_style" parent="chat_bubble_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bg_received_chat_bubble</item>
        <item name="android:backgroundTint">@color/blue_gray</item>
    </style>

    <style name="day_timestamp_style">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.CardView" parent="">
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeBottomLeft">34%</item>
        <item name="cornerSizeTopRight">34%</item>
        <item name="cornerSizeTopLeft">34%</item>
    </style>
</resources>